{
  "name": "workspace-root",
  "version": "1.0.0",
  "private": true,
  "description": "pnpm workspace with Next.js and Electron",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm --filter renderer dev\" \"pnpm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:3000 && pnpm --filter main build && pnpm --filter main exec electron packages/main/dist/index.js",
    "build": "pnpm --filter renderer build",
    "build:main": "pnpm --filter main build",
    "package": "pnpm build && pnpm build:main && pnpm --filter main package",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fake-indexeddb": "^6.2.4",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "msw": "^2.11.6",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.7",
    "wait-on": "^7.2.0"
  }
}
