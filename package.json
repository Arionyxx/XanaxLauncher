{
  "name": "workspace-root",
  "version": "1.0.0",
  "private": true,
  "description": "npm workspace with Next.js and Electron",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=packages/renderer\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:3000 && npm run build --workspace=packages/main && npm exec --workspace=packages/main electron packages/main/dist/index.js",
    "build": "npm run build --workspace=packages/renderer",
    "build:main": "npm run build --workspace=packages/main",
    "package": "npm run build && npm run build:main && npm run package --workspace=packages/main",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fake-indexeddb": "^6.2.4",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "msw": "^2.11.6",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.7",
    "wait-on": "^7.2.0"
  }
}
